<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/item_card_content_padding"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="@dimen/item_card_elevation"
        android:layout_margin="@dimen/item_card_layout_margin"
        app:cardCornerRadius="@dimen/item_card_corner_radius">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/item_league_badge"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:contentDescription="@null"
                tools:src="@drawable/ic_launcher_foreground"
                android:layout_gravity="center_horizontal"
                android:layout_height="120dp"/>

        <TextView
                android:id="@+id/item_league_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Laliga LA"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceSmall"/>

    </LinearLayout>

</android.support.v7.widget.CardView>